<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>SummaryTask</display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<res-ref-name>jdbc/root</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
<!--============================================================i18n support =============================================================-->
<!-- this way we set the resource bundle name -->
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources</param-value>
	</context-param>
<!-- this way we set the default locale (optional) -->
<!-- the (preferable) browser's locale will be used if we don't set the default locale -->
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>ru</param-value>
	</context-param>
<!-- supported locales -->
	<context-param>
		<param-name>locales</param-name>
		<param-value>ru en</param-value>
	</context-param>
<!--============================================================Controller =============================================================-->
	<servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>
            ua.nure.yeshenko.SummaryTask.web.Controller
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
<!--============================================================Encoding support filter =============================================================-->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>ua.nure.yeshenko.SummaryTask.web.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/WEB-INF/jsp/*</url-pattern>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
<!--============================================================Security filter.1) admin: admin commands2) client: client commands3) commons: commands for all roles4) out-of-control: commands without access controlDelimiter - space/tab =============================================================-->
	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>ua.nure.yeshenko.SummaryTask.web.filter.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>admin</param-name>
			<param-value>listClients insertProduct updateProduct confirm orderStatus deleteProduct</param-value>
		</init-param>
		<init-param>
			<param-name>client</param-name>
			<param-value>checkout confirm</param-value>
		</init-param>
		<init-param>
			<param-name>blocked</param-name>
			<param-value>
			
			</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>allOrders logout noCommand</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login register catalog cart changeLocale choice orderCart deleteFromCart search changeQuantity sorter getImage</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
<!--============================================================Context listener =============================================================-->
    <listener>
    	<listener-class>ua.nure.yeshenko.SummaryTask.web.listener.ContextListener</listener-class>
    </listener>
    <!--============================================================Error page =============================================================-->
    <error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>
</web-app>